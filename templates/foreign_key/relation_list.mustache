{{!
    @template local_adminer/foreign_key/relation_list

    This template prints the toggle JS and a small style in the header of the Adminer page.

    Example context (json):
    {
        "relationlist": [
            {
                "source": "mdl_course",
                "source_col": "id",
                "target": "mdl_course_modules",
                "target_col": "course"
            },
            {
                "source": "mdl_user",
                "source_col": "id",
                "target": "mdl_user_enrolments",
                "target_col": "userid"
            }
        ]
    }
}}

<p>
    <a class="" data-bs-toggle="collapse" href="#relationlist-{{uniqid}}" role="button" aria-expanded="false" aria-controls="collapseExample">
        {{#str}}showrelationlist, local_adminer{{/str}}
    </a>
</p>
<div class="collapse" id="relationlist-{{uniqid}}">
    <div class="card card-body">
        <code>
            {{#relationlist}}
                <div>{{source}}.{{source_col}}={{target}}.{{target_col}}</div>
            {{/relationlist}}
        </code>
    </div>
</div>
